<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_drawer_header_image"
        android:src="@drawable/nav_header_bg"
        android:scaleType="centerCrop" />

    <!--<ImageView-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="70dp"-->
        <!--android:src="@drawable/default_profile"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:layout_marginBottom="70dp"-->
        <!--android:layout_marginLeft="@dimen/nav_header_text_margin_left" />-->

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_drawer_profile_photo"
        android:src="@drawable/default_profile"
        android:scaleType="fitCenter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:riv_corner_radius="35dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        android:layout_gravity="top"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/nav_header_text_margin_left"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/nav_header_text_margin_left"
        android:text="johnny.appleseed@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</FrameLayout>
